<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.arndroid.etdiet"
    android:versionName="0.5.0"
    android:versionCode="500">

<uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".app.ETDApp">

        <activity
            android:name=".journal.JournalActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".foodsusage.FoodsUsageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".journal.JournalActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>
        <activity
            android:name=".settings.SettingsMainActivity"
            android:label="@string/settings"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>

        <activity
            android:name=".settings.SettingsListActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".settings.SettingsMainActivity" />
        </activity>

        <activity
            android:name=".weights.WeightsActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>

        <provider
            android:name="br.com.arndroid.etdiet.provider.Provider"
            android:authorities="br.com.arndroid.provider.etdiet"
            android:exported="false" />

    </application>

</manifest>
