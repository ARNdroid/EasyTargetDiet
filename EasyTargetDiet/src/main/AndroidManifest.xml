<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.arndroid.etdiet">

<uses-sdk />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".app.ETDApp">

        <activity
            android:name=".journal.JournalActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".foodsusage.FoodsUsageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".journal.JournalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>

        <activity
            android:name=".settings.SettingsMainActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>

        <activity
            android:name=".settings.SettingsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".settings.SettingsMainActivity" />
        </activity>

        <activity
            android:name=".weights.WeightsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".journal.JournalActivity" />
        </activity>

        <provider
            android:name="br.com.arndroid.etdiet.provider.Provider"
            android:authorities="br.com.arndroid.provider.etdiet"
            android:exported="false" />

    </application>

</manifest>
