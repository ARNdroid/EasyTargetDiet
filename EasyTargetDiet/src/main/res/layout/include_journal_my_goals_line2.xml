<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/layOilGoal"
        android:clickable="true"
        android:background="@drawable/card_selector"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            style="@style/CardFont.Data"
            android:id="@+id/txtOilGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/no_show_done_and_goal" />

        <TextView
            style="@style/CardFont.Section"
            android:id="@+id/lblOilGoal"
            android:layout_below="@id/txtOilGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/oil" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/laySupplementGoal"
        android:clickable="true"
        android:background="@drawable/card_selector"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            style="@style/CardFont.Data"
            android:id="@+id/txtSupplementGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/no_show_done_and_goal" />

        <TextView
            style="@style/CardFont.Section"
            android:id="@+id/lblSupplementGoal"
            android:layout_below="@id/txtSupplementGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/supplement" />

    </RelativeLayout>

</LinearLayout>