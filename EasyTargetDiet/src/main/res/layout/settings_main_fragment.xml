<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/default_view_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblMyGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_goals"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View style="@style/DividerHorizontal" />

    <RelativeLayout
        android:id="@+id/layExerciseGoal"
        android:clickable="true"
        android:background="@android:drawable/list_selector_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblExerciseGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtExerciseGoalActualValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblExerciseGoal"
            android:text="@string/units_actual_value"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</LinearLayout>