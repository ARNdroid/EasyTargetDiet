<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/CardFont.Header"
        android:id="@+id/lblMyGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_goals" />

    <View
        style="@style/HeaderDivider" />

    <include
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_after_header_divider"
        layout="@layout/include_journal_my_goals_line1" />

    <include
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_after_header_divider"
        layout="@layout/include_journal_my_goals_line2" />

</LinearLayout>